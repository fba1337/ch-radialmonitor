<!DOCTYPE html>
<html>
<head>
    <title>Report Details</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <a href="/report" class="back-button">&lt; Back to Report List</a>
    <h2>Report ID: <%= reportId %></h2>
    <h1>Upload Summary</h1>
    <p>Report generated on: <%= formatEST(reportDate) %></p>

    <!-- Dynamic Sections with Collapsible Functionality -->
    <% Object.entries(reportData.missingOrdersByDate).forEach(([date, orders]) => { %>
        <button class="collapsible">Missing Orders for <%= date %> (Total: <%= orders.length %>)</button>
        <div class="content">
            <ul>
                <% orders.forEach(order => { %>
                    <li>Order Number: <%= order.orderNumber %> - Product Option: <%= order.productOptionValue %></li>
                <% }); %>
            </ul>
        </div>
    <% }); %>

        
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var collapsibles = document.querySelectorAll('.collapsible');
            collapsibles.forEach(function(collapsible) {
                collapsible.addEventListener('click', function() {
                    this.classList.toggle('active');
                    var content = this.nextElementSibling;
                    if (content.style.display === 'block') {
                        content.style.display = 'none';
                    } else {
                        content.style.display = 'block';
                    }
                });
            });
        });
    </script>
</body>
</html>
